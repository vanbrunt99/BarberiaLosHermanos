@model IEnumerable<BarberiaLosHermanos.Dominio.Cita>

@{
    ViewData["Title"] = "Citas";
}

<div class="container py-4">
    <h1 class="display-4 mb-4">Citas (@Model.Count())</h1>

    <p>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="fas fa-plus-circle me-2"></i> Crear nueva cita
        </a>
    </p>

    <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                <th>Fecha y hora</th>
                <th>Cliente</th>
                <th>Servicio</th>
                <th>Precio</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FechaHora</td>
                    <td>@item.Cliente?.Nombre</td>
                    <td>@item.Servicio?.Nombre</td>
                    <td>₡@item.Servicio?.Precio.ToString("N2")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

