@model BarberiaLosHermanos.Dominio.Cita

@{
    ViewData["Title"] = "Crear Cita";
}

<div class="container py-4">
    <h1 class="display-4 mb-4">Crear nueva cita</h1>

    <div class="card shadow p-4">
        @* Resumen de validación *@
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="ClienteId" class="form-label">Cliente</label>
                <select asp-for="ClienteId" asp-items="ViewBag.ClienteId" class="form-select">
                    <option value="">-- Seleccione un cliente --</option>
                </select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ServicioId" class="form-label">Servicio</label>
                <select asp-for="ServicioId" asp-items="ViewBag.ServicioId" class="form-select">
                    <option value="">-- Seleccione un servicio --</option>
                </select>
                <span asp-validation-for="ServicioId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaHora" class="form-label">Fecha y hora</label>
                <input asp-for="FechaHora" class="form-control" type="datetime-local" />
                <span asp-validation-for="FechaHora" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
