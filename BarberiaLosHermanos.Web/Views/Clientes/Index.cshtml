@model IEnumerable<BarberiaLosHermanos.Dominio.Cliente>
@* La vista recibe una lista de clientes *@

@{
    ViewData["Title"] = "Clientes Registrados";  @* Título de la página *@
}

<div class="container py-4">
    <h1 class="display-4 mb-4">
        Clientes Registrados (@Model.Count())   @* Muestra cuántos clientes hay *@
    </h1>

    <p>
        @* Botón para ir al formulario de alta de cliente *@
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="fas fa-plus-circle me-2"></i> Crear Nuevo Cliente
        </a>
    </p>

    <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                @* Encabezados de cada columna *@
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <th>@Html.DisplayNameFor(model => model.Correo)</th>
                <th>@Html.DisplayNameFor(model => model.Cedula)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)   @* Recorre todos los clientes *@
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cedula)</td>

                    <td>
                        @* Acciones sobre el cliente actual *@
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                        |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
