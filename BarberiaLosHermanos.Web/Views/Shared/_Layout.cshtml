@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Barbería Los Hermanos</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BarberiaLosHermanos.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                @* Logo + nombre del local (enlace al inicio) *@
                <a class="navbar-brand d-flex align-items-center"
                   asp-controller="Home" asp-action="Index">
                    @* Logo pequeño (40x40) usando Url.Content para evitar warnings de '~' *@
                    <img src="@Url.Content("~/img/logo.png")"
                         alt="Logo Barbería Los Hermanos"
                         class="navbar-logo rounded-circle me-2" />

                    <span class="fw-bold text-white">Barbería Los Hermanos</span>
                </a>


                @* Botón hamburguesa en pantallas pequeñas *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    @* Menú principal (lado izquierdo) *@
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Clientes" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Servicios" asp-action="Index">Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Citas" asp-action="Index">Citas</a>
                        </li>
                    </ul>

                    @* Área de autenticación (lado derecho) *@
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-light">
                                    Hola, @User.Identity!.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity"
                                      asp-page="/Account/Logout"
                                      method="post"
                                      class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link text-light">
                                        Cerrar sesión
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light"
                                   asp-area="Identity"
                                   asp-page="/Account/Login">
                                    Iniciar sesión
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light"
                                   asp-area="Identity"
                                   asp-page="/Account/Register">
                                    Registrarse
                                </a>
                            </li>
                        }
                    </ul>
                    @* _LoginPartial se elimina para no duplicar el área de login/logout *@
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; @DateTime.Now.Year - Barbería Los Hermanos
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
