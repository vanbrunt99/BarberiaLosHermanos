@{
    ViewData["Title"] = "Inicio";   @* Título de la página *@
}

<div class="container py-5">
    @* Sección principal tipo "hero" *@
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-3 fw-bold mb-3">Barbería Los Hermanos</h1> @* Título grande *@
            <p class="lead mb-4">
                Administra clientes, servicios y citas. 
                        Todo dentro de un mismo lugar. 
             
            </p>

            @* Botones de acceso rápido a módulos clave *@
            <div class="d-flex gap-3 flex-wrap">
                <a asp-controller="Citas" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="fas fa-calendar-check me-2"></i> Ver Citas
                </a>
                <a asp-controller="Clientes" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-users me-2"></i> Ver Clientes
                </a>
                <a asp-controller="Servicios" asp-action="Index" class="btn btn-outline-dark btn-lg">
                    <i class="fas fa-cut me-2"></i> Ver Servicios
                </a>
            </div>
        </div>

        <div class="col-md-6 text-center">
            @* Bloque visual simulando una tarjeta/gráfico de barbería *@
            <div class="bg-dark text-white rounded-3 shadow-lg p-5">
                <i class="fas fa-cut fa-4x mb-3"></i> @* Icono de tijeras *@
                <h3 class="mb-2">Bienvenido a tu agenda.</h3>
                <p class="mb-0">
                    Gestión de citas, clientes y servicios con la precisión que tu negocio merece.
                </p>
            </div>
        </div>
    </div>

    @* Sección de tarjetas para cada módulo *@
    <div class="row text-center g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-user-friends fa-2x mb-3"></i>
                    <h4>Clientes</h4>
                    <p>Registra nuevos clientes y consulta su historial de citas.</p>
                    <a asp-controller="Clientes" asp-action="Index" class="btn btn-outline-primary">
                        Gestionar Clientes
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-cut fa-2x mb-3"></i>
                    <h4>Servicios</h4>
                    <p>Configura los servicios, y la disponibilidad.</p>
                    <a asp-controller="Servicios" asp-action="Index" class="btn btn-outline-primary">
                        Gestionar Servicios
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-calendar-alt fa-2x mb-3"></i>
                    <h4>Citas</h4>
                    <p>Consulta la agenda y revisa la disponibilidad.</p>
                    <a asp-controller="Citas" asp-action="Index" class="btn btn-outline-primary">
                        Gestionar Citas
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
