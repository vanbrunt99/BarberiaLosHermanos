@model IEnumerable<BarberiaLosHermanos.Dominio.Servicio>

@{
    ViewData["Title"] = "Servicios";
    var esAdmin = User.IsInRole("Admin");
}

<div class="container py-4">
    <h1 class="display-5 mb-3">Servicios de la barbería</h1>

    @* Solo Admin ve el botón de crear *@
    @if (esAdmin)
    {
        <p>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus-circle me-2"></i> Agregar servicio
            </a>
        </p>
    }

    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Duración (min)</th>
                <th>Estado</th>
                @if (esAdmin)
                {
                    <th class="text-end">Acciones</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Nombre</td>
                    <td>₡@s.Precio.ToString("N0")</td>
                    <td>@(s.Duracion.HasValue? s.Duracion.Value + " min" : "-")</td>
                    <td>
                        @if (s.EstaActivo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </td>

                    @if (esAdmin)
                    {
                        <td class="text-end">
                            <form asp-action="ToggleActivo" asp-route-id="@s.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm @(s.EstaActivo ? "btn-outline-warning" : "btn-outline-success")">
                                    @(s.EstaActivo ? "Desactivar" : "Activar")
                                </button>
                            </form>

                            <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-outline-primary ms-1">
                                Editar
                            </a>

                            <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-sm btn-outline-danger ms-1">
                                Eliminar
                            </a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
