@model BarberiaLosHermanos.Dominio.Servicio

@{
    ViewData["Title"] = "Eliminar Servicio";
}

<div class="container py-4">
    <h1 class="display-5 mb-4 text-danger">Eliminar servicio</h1>

    <div class="alert alert-warning">
        <strong>¿Seguro que deseas eliminar este servicio?</strong>
        Esta acción no se puede deshacer.
    </div>

    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">₡@Model.Precio.ToString("N0")</dd>

        <dt class="col-sm-2">Duración</dt>
        <dd class="col-sm-10">@((Model.Duracion.HasValue ? Model.Duracion + " min" : "-"))</dd>

        <dt class="col-sm-2">Activo</dt>
        <dd class="col-sm-10">@(Model.EstaActivo ? "Sí" : "No")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">
            Sí, eliminar servicio
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
            Cancelar
        </a>
    </form>
</div>

